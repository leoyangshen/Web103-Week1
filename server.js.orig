import express from 'express';
import dotenv from "dotenv";
import path from 'path';
import { fileURLToPath } from 'url';
import launches from "./public/scripts/data.js";

const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);

const app = express();
dotenv.config();
// const PORT = process.env.PORT || 3001;
const PORT = process.env.PORT;

// Serve static files (HTML, CSS, JS) from the 'public' directory
app.use(express.static(path.join(__dirname, 'public')));

// API route to get all launches
app.get('/launches', (req, res) => {
  // We will add the launches data here in the next step
  // res.send('This is the API endpoint for all launches.');
  res.json(launches);
});

// API route to get a single launch by ID
app.get('/launches/:launchId', (req, res) => {
  const launchId = req.params.launchId;
  res.send(`This is the API endpoint for launch with ID: ${launchId}.`);
});

// Route to serve the index.html file for the root URL
app.get('/', (req, res) => {
  res.sendFile(path.join(__dirname, 'public', 'index.html'));
});

// Start the server
app.listen(PORT, () => {
  console.log(`Server is running on http://localhost:${PORT}`);
});
